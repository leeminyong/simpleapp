<?xml version="1.0" encoding="utf-8"?>



    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_default_bg_white"
        >
        <ImageView
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/iv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv2"
            android:background="@color/list_select"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv1"
            app:layout_constraintBottom_toTopOf="@id/iv3"
            android:background="@android:color/holo_red_dark"/>
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="80dp"
            android:layout_height="80dp"

            app:layout_constraintLeft_toRightOf="@+id/iv3_1"
            app:layout_constraintTop_toBottomOf="@id/iv2"
            app:layout_constraintBottom_toTopOf="@id/iv4"
            android:background="@android:color/holo_blue_bright"/>
    <ImageView
        android:id="@+id/iv3_1"
        android:layout_width="80dp"
        android:layout_height="80dp"

        app:layout_constraintStart_toRightOf="@+id/iv3"
        app:layout_constraintTop_toBottomOf="@id/iv2"
        app:layout_constraintBottom_toTopOf="@id/iv4"
        android:background="@android:color/holo_green_light"/>
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_default_bg_orange"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


