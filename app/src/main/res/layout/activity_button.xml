<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ButtonActivity">

    <!--font setting  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_font1"
            android:background="@drawable/round_btn_off"
            android:textColor="@color/setting_txt_off"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"

            android:fontFamily="@font/medium"
            android:textSize="13sp"
            android:text="영어"/>
        <TextView
            android:id="@+id/txt_font2"
            android:background="@drawable/round_btn_off"
            android:textColor="@color/setting_txt_off"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:textSize="13sp"

            android:text="발음기호"/>
        <TextView
            android:id="@+id/txt_font3"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_width="0dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/round_btn_off"
            android:textColor="@color/setting_txt_off"
            android:gravity="center"

            android:fontFamily="@font/medium"
            android:textSize="13sp"
            android:text="한글 독음"/>
        <TextView
            android:id="@+id/txt_font4"
            android:layout_height="48dp"
            android:layout_width="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn_off"
            android:textColor="@color/setting_txt_off"
            android:fontFamily="@font/medium"
            android:gravity="center"

            android:textSize="13sp"
            android:text="뜻"/>

    </LinearLayout>

</LinearLayout>