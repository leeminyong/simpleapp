<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_layout_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/chapter_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cartoon_1"
        android:orientation="horizontal"
        android:visibility="visible"></ImageView>

    <ImageView
        android:id="@+id/chapter_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="3dip"
        android:background="@drawable/stage_ing_num01" />

    <ImageView
        android:id="@+id/cartoon_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/cartoon_gray"
        android:orientation="horizontal"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/chapter_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:background="@drawable/cartoon_outln_on"
        android:orientation="horizontal"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:text="Day1 채용"
        android:textAlignment="center"
        android:textColor="@color/stage1TextColor"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>