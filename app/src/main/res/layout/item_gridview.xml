<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/table_layout_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cartoon_1"
        android:adjustViewBounds="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/chapter_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="3dip"
        app:srcCompat="@drawable/stage_ing_num01" />

    <ImageView
        android:id="@+id/cartoon_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"

        app:srcCompat="@drawable/cartoon_gray"
        android:layout_margin="3dip"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/chapter_img2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dip"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/cartoon_outln_on"

        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/cartoon_gray"
        android:text="Day1 채용"
        android:textAlignment="center"
        android:textColor="@color/stage1TextColor"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>